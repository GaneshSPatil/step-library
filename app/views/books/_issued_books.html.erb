<div class="table_content">
  <table id="issued_books_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead id="header">
      <tr>
        <th>Book Name</th>
        <th>Book Copy</th>
        <th>User Name</th>
        <th>Issued Date</th>
        <th>Expected Return Date</th>
      </tr>
    </thead>
    <body>
      <% @records.each do |record| %>
        <tr>
          <td><%= record.book_title%></td>
          <td><%= record.book_copy.copy_id %></td>
          <td><%= record.user.name %></td>
          <td><%= record.borrow_date.strftime("%b %d, %Y")%></td>
          <td><%= record.expected_return_date.strftime("%b %d, %Y") %></td>
        </tr>
      <% end %>

    </body>
  </table>
</div>