<h1>My Books</h1>

<div class="list-group">
  <% if @books.empty? %>
      <h4>You havenâ€™t issued any books.</h4>
  <% else %>
      <% @books.each do |book| %>
          <%= link_to books_show_path(book.id), :class => "list-group-item" do %>
              <%= image_tag(book.image_link, class: 'book_thumbnail') %>
              <h4><%= book.title %></h4>
              <h6>By <%= book.author %></h6>

              <div class="return_book_button">
                <button id="borrow_book">Return Book</button>
              </div>
          <% end %>
      <% end %>
  <% end %>
</div>