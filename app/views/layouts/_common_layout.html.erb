<meta name="viewport" content="width=device-width, initial-scale=1">
<body>
<% if user_signed_in? %>
    <header>
      <spam id="current_tab_name" hidden="false"><%= @current_tab %></spam>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <ul class="nav navbar-nav" >
            <li id="home"> <a class="navbar-brand" href="/" id="home-page-button">
                    <p><span class="glyphicon glyphicon-home big-home-icon"></span></p>
                </a>
            </li>
            <% if current_user.role == "Admin" %>
                <li id="manage_books"><a href="/books/manage" class="nav-user-options" >Manage Books</a></li>
                <li id="users"><%= link_to $config['en']['manageUsers'], :users ,:class => "nav-user-options"%></li>
            <% end %>
          </ul>
          <span class="user_info collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a id="user-options" href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                  <%= current_user.name %> <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li><%= link_to "My Books", users_books_path %></li>
                    <li class="divider"></li>
                    <li><%= link_to('Logout', destroy_user_session_path, :method => :delete, :id => "logout") %></li>
                </ul>
              </li>
            </ul>
          </span>
        </div>
      </nav>
    </header>
<% end %>

