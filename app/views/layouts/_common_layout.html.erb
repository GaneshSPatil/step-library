<meta name="viewport" content="width=device-width, initial-scale=1">
<%= stylesheet_link_tag 'my_style' %>
<body>
<% if user_signed_in? %>
    <header>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <a class="navbar-brand" href="/" id="home-page-button">
            <p><span class="glyphicon glyphicon-home big-home-icon"></span></p></a>
        <span class="user_info collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a id="user-options" href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                <%= current_user.name %> <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <% if current_user.role == "Intern" %>
                    <li><a href="#">My Books</a></li>
                <% else %>
                    <li><%= link_to "Manage Books", books_manage_path %></li>
                    <li><%= link_to 'Search Users', :users %></li>
                    <li><a href="#">My Books</a></li>
                <% end %>
                <li class="divider"></li>
                <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
              </ul>
            </li>
          </ul>
        </span>
<% end %>

<% if flash[:error] %>
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <strong><%= flash[:error] %></strong>
    </div>
<% end %>

<% if flash[:success] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <strong><%= flash[:success] %></strong>
    </div>
<% end %>
</div>
</nav>
</header>
