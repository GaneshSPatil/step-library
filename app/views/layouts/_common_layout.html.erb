<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <%= stylesheet_link_tag 'my_style' %>
</head>
<body>
<% if user_signed_in? %>
    <nav class="navbar navbar-default">
      <a class="navbar-brand" href="/" id="home-page-button">
        <p><span class="glyphicon glyphicon-home big-home-icon"></span></p></a>
        <span class="user_info ">
            <div class="btn-group">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <%= current_user.name %>
                <span class="glyphicon glyphicon-triangle-bottom"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <% if current_user.role == "Intern" %>
                    <li><a href="#">My Books</a></li>
                <% else %>
                    <li><%= link_to "Manage Books", books_manage_path %></li>
                    <li><%= link_to 'Search Users', :users %></li>
                    <li><a href="#">My Books</a></li>
                <% end %>
                <li class="divider"></li>
                <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
              </ul>
            </div>
        </span>
    </nav>
<% end %>

<% if flash[:error] %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <strong><%= flash[:error] %></strong>
    </div>
<% end %>

<% if flash[:success] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <strong><%= flash[:success] %></strong>
    </div>
<% end %>

</body>
</html>