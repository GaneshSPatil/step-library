<div class="tab-pane active" id="overview">
  <h5>BASIC INFORMATION</h5>
  <hr/>

  <span><b>Name:</b>&nbsp;&nbsp;<%= @user.name %></span>
  <hr/>

  <span><b>Role:</b>&nbsp;&nbsp;<%= @user.role %></span>
  <br/><br/><br/>
  <h5> CONTACT DETAILS </h5>
  <hr/>

  <span><b>Email:</b>&nbsp;&nbsp;<%= @user.email %></span>
  <hr/>
  <% if @user.enabled and @user!=current_user %>
      <%= link_to 'Disable this User', '#', data: {toggle: 'modal', target: '#disable-user-modal'}, id: 'disable-user-link' %>

      <div class="modal fade bs-example-modal-sm" id="disable-user-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title"><%= "#{$config['en']['disablingConfirmation'].gsub('<user-name>', @user.name).gsub('<no-of-books>', @user.books.count.to_s)} " %></h4>
            </div>
            <div class="modal-footer">
              <button id='no' type="button" class="btn btn-default" data-dismiss="modal">No</button>
              <%= link_to 'Yes', disable_user_path(@user.id), method: :post, class: 'btn btn-default', id: 'yes' %>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>
