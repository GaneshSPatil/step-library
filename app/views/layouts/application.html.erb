<!DOCTYPE html>
<html>
<head>
  <title>StepLibrary</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'bootstrap-social' %>
  <%= stylesheet_link_tag "//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <link rel="shortcut icon" href="http://smartmobilestudio.com/wp-content/uploads/2012/06/leather-book-preview.png"/>

  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

  <%= csrf_meta_tags %>
</head>
<body>
<%= render :partial => 'layouts/common_layout' %>
<div class="container">

  <% if flash[:error] %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong><%= flash[:error] %></strong>
      </div>
  <% end %>

  <% if flash[:success] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong><%= flash[:success] %></strong>
      </div>
  <% end %>
  <%= yield %>
</div>
</body>
</html>
