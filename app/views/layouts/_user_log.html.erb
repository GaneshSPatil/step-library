<div class="list-group tab-pane" id="user_logs">
    <div id="UsersBookLog">
        <% if @logs.empty? %>
            <h4>No logs available.</h4>
        <% else %>
            <table id="user_log" class="table table-striped table-bordered table-hover">
                <thead id="header" class="user_log">
                <tr>
                    <th>Book Name</th>
                    <th>Copy Id</th>
                    <th>Borrow Date</th>
                    <th>Expected Return Date</th>
                    <th>Return Date</th>

                </tr>
                </thead>
                <tbody>
                <% @logs.each do |log| %>
                    <tr>
                        <td><%= log.book_title %></td>
                        <td><%= log.book_copy_id %></td>
                        <td><%= log.borrow_date.strftime("%b %d, %Y") %></td>
                        <td><%= log.expected_return_date.strftime("%b %d, %Y") %></td>
                        <% if log.return_date.nil? %>
                            <% if log.overdue? %>
                                <td><span id="overdue" class="label label-danger"> Overdue </span></td>
                            <% else %>
                                <td><%= "Not returned yet." %></td>
                            <% end %>
                        <% else %>
                            <td><%= log.return_date.strftime("%b %d, %Y") %></td>
                        <% end %>
                    </tr>
                <% end %>
                </tbody>
            </table>
        <% end %>
    </div>
</div>